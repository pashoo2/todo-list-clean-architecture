{
  "name": "react-node-monorepo",
  "version": "1.0.0",
  "author": "Akulich Pavel",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines" : { 
    "npm" : ">=8.0.0 <9.0.0",
    "node" : ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "postinstall": "yarn patches:apply && lerna bootstrap",
    "build": "lerna run build",
    "build:client": "yarn build -- --ignore \"server-*\"",
    "build:server": "lerna run build --ignore \"client-*\"",
    "start": "lerna run start --parallel",
    "start:common": "yarn start -- --ignore \"client-*\" --ignore \"server-*\"",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "clean:node_modules": "npx rimraf --glob **/node_modules",
    "clean:build:ts-cache": "npx rimraf --glob **/*.tsbuildinfo",
    "clean:build:cache": "yarn clean:build:ts-cache && yarn clean:node_modules",
    "clean:build": "lerna run clean:build",
    "clean": "yarn clean:build && yarn clean:build:cache",
    "patches:create": "patch-package --",
    "patches:apply": "patch-package",
    "run:server": "lerna run start:nodemon --scope=server-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "parcel": "^2.1.1",
    "patch-package": "^7.0.0"
  }
}
